<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@drawable/rounded_surface"
    android:elevation="@dimen/md"
    android:orientation="vertical"
    android:padding="@dimen/xxl"
    tools:context=".ui.AddTodoActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/title_add_todo"
        android:textAppearance="@style/TextAppearance.Material3.HeadlineMedium"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/xxl"
        android:labelFor="@id/input_todo"
        android:text="@string/label_input_todo"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

    <EditText
        android:id="@+id/input_todo"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="text" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lg"
        android:labelFor="@id/input_todo_date"
        android:text="@string/label_input_todo_date"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

    <EditText
        android:id="@+id/input_todo_date"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="date" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/lg"
        android:labelFor="@id/input_todo_time"
        android:text="@string/label_input_todo_time"
        android:textAppearance="@style/TextAppearance.Material3.LabelLarge" />

    <EditText
        android:id="@+id/input_todo_time"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:ems="10"
        android:importantForAutofill="no"
        android:inputType="time" />

    <Button
        android:id="@+id/button_save_todo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="@dimen/xxl"
        android:text="@string/button_save_todo_text" />
</LinearLayout>
